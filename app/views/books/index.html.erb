<h1>New book</h1>

<%= form_with model: @user,url:'/users',method: :post do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 
 <h4>Opinion</h4>
 <%= f.text_area :body %>
 
 <%= f.submit '投稿' %>
<% end %>

<% @books.each do |book| %>
 <p>Title</p>
  <span><%= book.title %></span>
 <p>Opinion</p>
  <span><%= book.body %></span>
<% end %>