<div class= "container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
       <%= form_with model: @user do |f| %>
      <div class="font-group">
       <h6>name</h6>
       <%= f.text_field :name %>
      </div>
      <div class="font-group">
       <h6>Image</h6>
       <%= f.file_field :image, accept: "image/*" %>
      </div>
	    <div class="font-group">
       <h6>Introduction</h6>
       <%= f.text_area :introduction %>
      </div>
	    <div class="font-group">
      <%= f.submit 'Update User' %>
      </div>
      <% end %>
    </div>
  </div>
</div>